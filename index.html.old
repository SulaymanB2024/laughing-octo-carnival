                    .attr("x2", d => d.target.x)
                    .attr("y2", d => d.target.y);
                    
                node
                    .attr("cx", d => d.x)
                    .attr("cy", d => d.y);
                    
                label
                    .attr("x", d => d.x)
                    .attr("y", d => d.y);
            });
            
        simulation.force("link")
            .links(links);
            
        // Layer toggle functionality
        const toggleVisLayout = document.getElementById('toggleVisLayout');
        const layerSkillsCheckbox = document.getElementById('layerSkills');
        const layerProjectsCheckbox = document.getElementById('layerProjects');
        const layerConnectionsCheckbox = document.getElementById('layerConnections');
        const visLayersBtn = document.getElementById('visLayersBtn');
        const layersDropdown = document.getElementById('layersDropdown');
        
        // Toggle between different visualization layouts
        toggleVisLayout.addEventListener('click', () => {
            if (simulation.force("center").x() === width / 2) {
                // Switch to radial layout
                simulation.force("center", null);
                simulation.force("x", d3.forceX(d => d.group === "project" ? width * 0.3 : width * 0.7).strength(0.4));
                simulation.force("y", d3.forceY(height / 2).strength(0.2));
            } else {
                // Switch back to force-directed layout
                simulation.force("center", d3.forceCenter(width / 2, height / 2));
                simulation.force("x", d3.forceX(width / 2).strength(0.05));
                simulation.force("y", d3.forceY(height / 2).strength(0.05));
            }
            
            simulation.alpha(1).restart();
        });
        
        // Show/hide layers dropdown
        visLayersBtn.addEventListener('click', () => {
            layersDropdown.classList.toggle('hidden');
        });
        
        // Hide dropdown when clicking outside
        document.addEventListener('click', (event) => {
            if (!visLayersBtn.contains(event.target) && !layersDropdown.contains(event.target)) {
                layersDropdown.classList.add('hidden');
            }
        });
        
        // Layer visibility toggles
        layerSkillsCheckbox.addEventListener('change', () => {
            const skillNodes = node.filter(d => d.group === "skill");
            if (layerSkillsCheckbox.checked) {
                skillNodes.style("visibility", "visible");
            } else {
                skillNodes.style("visibility", "hidden");
            }
            
            // Update links visibility based on connected nodes visibility
            updateLinkVisibility();
        });
        
        layerProjectsCheckbox.addEventListener('change', () => {
            const projectNodes = node.filter(d => d.group === "project");
            if (layerProjectsCheckbox.checked) {
                projectNodes.style("visibility", "visible");
            } else {
                projectNodes.style("visibility", "hidden");
            }
            
            // Update links visibility based on connected nodes visibility
            updateLinkVisibility();
        });
        
        layerConnectionsCheckbox.addEventListener('change', () => {
            if (layerConnectionsCheckbox.checked) {
                link.style("visibility", "visible");
                updateLinkVisibility();
            } else {
                link.style("visibility", "hidden");
            }
        });
        
        function updateLinkVisibility() {
            if (!layerConnectionsCheckbox.checked) return;
            
            link.each(function(d) {
                const sourceVisible = layerProjectsCheckbox.checked && d.source.group === "project" || 
                                    layerSkillsCheckbox.checked && d.source.group === "skill";
                                    
                const targetVisible = layerProjectsCheckbox.checked && d.target.group === "project" || 
                                    layerSkillsCheckbox.checked && d.target.group === "skill";
                                    
                d3.select(this).style("visibility", sourceVisible && targetVisible ? "visible" : "hidden");
            });
        }
        
        // Window resize handler
        window.addEventListener('resize', () => {
            const newWidth = window.innerWidth;
            const newHeight = window.innerHeight;
            
            // Update SVG dimensions
            svg.attr("width", newWidth)
                .attr("height", newHeight);
                
            // Update simulation center
            simulation.force("center", d3.forceCenter(newWidth / 2, newHeight / 2));
            simulation.force("x", d3.forceX(newWidth / 2).strength(0.05));
            simulation.force("y", d3.forceY(newHeight / 2).strength(0.05));
            
            // Restart the simulation
            simulation.alpha(1).restart();
        });
        
        // Timeline Scrubber Module
        const TimelineScrubber = (function() {
            // Private variables
            let elements = {
                startSlider: document.getElementById('timelineStartSlider'),
                endSlider: document.getElementById('timelineEndSlider'),
                rangeDisplay: document.getElementById('timelineRangeDisplay'),
                selectedRange: document.getElementById('timelineSelectedRange'),
                applyButton: document.getElementById('applyTimelineFilter'),
                resetButton: document.getElementById('resetTimelineFilter')
            };
            
            let state = {
                startYear: parseFloat(elements.startSlider.value),
                endYear: parseFloat(elements.endSlider.value),
                isFilterActive: false
            };
            
            // Format year values (handles quarters)
            function formatYear(year) {
                const wholeYear = Math.floor(year);
                const fraction = year - wholeYear;
                
                if (fraction === 0) return wholeYear;
                if (fraction === 0.25) return `${wholeYear} Q1`;
                if (fraction === 0.5) return `${wholeYear} Q2`;
                if (fraction === 0.75) return `${wholeYear} Q3`;
                return `${wholeYear}`;
            }
            
            // Update the timeline UI elements
            function updateUI() {
                const minRange = parseFloat(elements.startSlider.min);
                const maxRange = parseFloat(elements.endSlider.max);
                const totalRange = maxRange - minRange;
                
                // Calculate positions as percentages
                const startPosition = ((state.startYear - minRange) / totalRange) * 100;
                const endPosition = ((state.endYear - minRange) / totalRange) * 100;
                
                // Update the visual indicator
                elements.selectedRange.style.left = startPosition + '%';
                elements.selectedRange.style.width = (endPosition - startPosition) + '%';
                
                // Update the text display
                elements.rangeDisplay.textContent = `${formatYear(state.startYear)} - ${formatYear(state.endYear)}`;
            }
            
            // Apply project visibility based on timeline filter
            function applyProjectFilter() {
                const projectCards = document.querySelectorAll('[data-project-id]');
                
                projectCards.forEach(card => {
                    // Get project dates
                    const projectStart = parseFloat(card.dataset.projectStart || 0);
                    const projectEnd = parseFloat(card.dataset.projectEnd || 9999);
                    
                    // Check if project date range overlaps with selected range
                    const isInRange = (projectEnd >= state.startYear && projectStart <= state.endYear);
                    
                    // Set card visibility with animation
                    setCardVisibility(card, isInRange);
                });
            }
            
            // Set card visibility with proper transitions
            function setCardVisibility(card, isVisible) {
                if (isVisible) {
                    card.style.display = '';
                    card.classList.add('active');
                    
                    // Apply a smooth fade-in transition
                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 50);
                } else {
                    card.classList.remove('active');
                    
                    // Apply a smooth fade-out transition
                    card.style.opacity = '0.3';
                    card.style.transform = 'translateY(10px)';
                    
                    // Hide completely after transition (for better layout)
                    setTimeout(() => {
                        if (!card.classList.contains('active')) {
                            card.style.display = 'none';
                        }
                    }, 300);
                }
            }
            
            // Update URL parameters for filter state
            function updateURLParameters(shouldClear = false) {
                const urlParams = new URLSearchParams(window.location.search);
                
                if (shouldClear) {
                    urlParams.delete('timelineStart');
                    urlParams.delete('timelineEnd');
                } else {
                    urlParams.set('timelineStart', state.startYear);
                    urlParams.set('timelineEnd', state.endYear);
                }
                
                const newUrl = urlParams.toString().length ? 
                    `${window.location.pathname}?${urlParams}${window.location.hash}` :
                    `${window.location.pathname}${window.location.hash}`;
                
                window.history.replaceState({}, '', newUrl);
            }
            
            // Reset all cards to visible state
            function resetCardVisibility() {
                const projectCards = document.querySelectorAll('[data-project-id]');
                projectCards.forEach(card => {
                    card.style.display = '';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                    card.classList.add('active');
                });
            }
            
            // Apply filter button handler
            function handleApplyFilter() {
                applyProjectFilter();
                state.isFilterActive = true;
                
                // Update button states
                elements.applyButton.classList.add('active');
                elements.resetButton.classList.remove('opacity-50');
                
                // Update URL parameters
                updateURLParameters();
            }
            
            // Reset filter button handler
            function handleResetFilter() {
                // Reset sliders to default values
                elements.startSlider.value = elements.startSlider.min;
                elements.endSlider.value = elements.endSlider.max;
                
                // Update state
                state.startYear = parseFloat(elements.startSlider.min);
                state.endYear = parseFloat(elements.endSlider.max);
                state.isFilterActive = false;
                
                // Update UI
                updateUI();
                resetCardVisibility();
                
                // Update button states
                elements.applyButton.classList.remove('active');
                elements.resetButton.classList.add('opacity-50');
                
                // Clear URL parameters
                updateURLParameters(true);
            }
            
            // Load filter state from URL parameters
            function initializeFromURL() {
                const urlParams = new URLSearchParams(window.location.search);
                if (urlParams.has('timelineStart') && urlParams.has('timelineEnd')) {
                    const urlStartYear = parseFloat(urlParams.get('timelineStart'));
                    const urlEndYear = parseFloat(urlParams.get('timelineEnd'));
                    
                    if (!isNaN(urlStartYear) && !isNaN(urlEndYear)) {
                        // Update sliders
                        elements.startSlider.value = urlStartYear;
                        elements.endSlider.value = urlEndYear;
                        
                        // Update state
                        state.startYear = urlStartYear;
                        state.endYear = urlEndYear;
                        state.isFilterActive = true;
                        
                        // Update UI
                        updateUI();
                        applyProjectFilter();
                        
                        // Update button states
                        elements.applyButton.classList.add('active');
                        elements.resetButton.classList.remove('opacity-50');
                    }
                }
            }
            
            // Handle scroll behavior for sticky timeline
            function setupScrollBehavior() {
                const timelineScrubber = document.querySelector('.timeline-scrubber-section');
                const heroSection = document.querySelector('.hero-section');
                
                window.addEventListener('scroll', function() {
                    if (heroSection && timelineScrubber) {
                        if (window.scrollY > heroSection.clientHeight) {
                            timelineScrubber.classList.add('scrolled-past-hero');
                        } else {
                            timelineScrubber.classList.remove('scrolled-past-hero');
                        }
                    }
                });
            }
            
            // Public methods
            return {
                init: function() {
                    // Set up event listeners
                    elements.startSlider.addEventListener('input', function() {
                        state.startYear = parseFloat(this.value);
                        
                        // Ensure start doesn't exceed end
                        if (state.startYear > state.endYear) {
                            state.endYear = state.startYear;
                            elements.endSlider.value = state.startYear;
                        }
                        
                        updateUI();
                    });
                    
                    elements.endSlider.addEventListener('input', function() {
                        state.endYear = parseFloat(this.value);
                        
                        // Ensure end doesn't go below start
                        if (state.endYear < state.startYear) {
                            state.startYear = state.endYear;
                            elements.startSlider.value = state.endYear;
                        }
                        
                        updateUI();
                    });
                    
                    elements.applyButton.addEventListener('click', handleApplyFilter);
                    elements.resetButton.addEventListener('click', handleResetFilter);
                    
                    // Initialize UI
                    updateUI();
                    
                    // Setup scroll behavior
                    setupScrollBehavior();
                    
    </footer>
    
    <!-- Modular JavaScript imports -->
    <script type="module" src="js/main.js"></script>
</body>
</html>
